{
  "name": "markdown-preview-pdf",
  "displayName": "markdown-preview-pdf",
  "description": "Effortlessly preview markdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/mioco/markdown-preview-pdf/tree/main/packages/vscode-extension"
  },
  "publisher": "osyo",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/main.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "editorFocus && editorLangId == markdown",
          "command": "markdown-extension.preview",
          "group": "navigation"
        },
        {
          "when": "activeWebviewPanelId == preview",
          "command": "markdown-extension.download-pdf",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "markdown-extension.preview",
        "title": "Markdown Preview"
      },
      {
        "command": "markdown-extension.download-pdf",
        "title": "Download PDF"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "resume-phobia",
          "title": "Resume Phobia",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "resume-phobia": [
        {
          "type": "webview",
          "id": "resume-phobia-panel",
          "name": "Resume Phobia"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:vsix": "vsce package --no-dependencies",
    "publish:vsix": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/html-pdf": "^3.0.3",
    "@types/lodash": "^4.17.13",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/showdown": "^2.0.6",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.2"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
  "dependencies": {
    "marked": "^15.0.2",
    "puppeteer": "^23.9.0"
  }
}
